<body>
    <script src="/createResume/addSchool"></script>
    <div class="bg-img">
        <div class="container">
            <div class="topnav">
                <a href="/">Home</a>
                <a href="/createResume">Create Resume</a>
                <a href="/getResume">Get Resume</a>
                <a href="/about">About</a>
            </div>
        </div>
    </div>
    <div class="pre-form">
        <form action="createResume.html" onsubmit="alert('Information saved');return false">
            <div class="cardbg">
                <h2>Personal Information</h2>
                <div class="name">
                    <label for="firstName">First Name</label><input type="text" name="firstName" id="firstName"
                        required>
                    <br>
                    <br>
                    <label for="lastName">Last Name</label><input type="text" name="lastName" id="lastName" required>
                </div>

                <div class="name">
                    <label for="emailID">Email ID</label><input type="email" name="emailID" id="emailID" required>
                </div>

                <div class="name">
                    <label for="phoneNum">Phone Number</label><input type="text" name="phoneNum" id="phoneNum" required>
                </div>

                <div class="name">
                    <label for="objective">Your Objective</label><input type="text" name="objective" id="objective"
                        required>
                </div>

                <h2>Your Educational Information</h2>

                <div class="eduInfo">
                    <ol type="1" id="eduInfoList">
                        <li id="eduInfo1">
                            <label for="university">University Name</label><input type="text" name="university"
                                id="university" required>
                            <input type="button" value="add" id="addSchool" class="addschool">
                            <br>
                            <br>
                            <label for="degree">Degree</label><input type="text" name="degree" id="degree" required>
                        </li>
                    </ol>
                    <br>

                </div>

                <div class="name">
                    <label for="degYear">When you recived your Degree</label><input type="date" name="degYear"
                        id="degYear" required>
                </div>

                <div class="submitbtn">
                    <input type="submit" value="SAVE INFORMATION" class="btn">
                </div>
            </div>

        </form>
    </div>
</body>
