<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Your Resume</title>
    <link rel="stylesheet" href="/css/createResume.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@300&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="icon" href="https://maxcdn.icons8.com/Share/icon/ios7/Business/open_resume1600.png" type="image/x-icon"> -->
    <link rel="icon"
        href="https://cdn4.iconfinder.com/data/icons/education-flat-color-vol-3/52/resume__profile__document__job__CV__interview__career-512.png"
        type="image/x-icon">
</head>

<body>
    <!-- <script src="/createResume/addSchool"></script> -->
    <!-- main structure -->
    <div class="bg-img">
        <div class="container">
            <div class="topnav">
                <a href="/">Home</a>
                <a href="/createResume" id="createResumeHref">Create Resume</a>
                <a href="/getResume">Get Resume</a>
                <a href="/about">About</a>
            </div>
        </div>
    </div>

    <div class="pre-form" id="pre-form">
        <form action="/resumes/add" method="POST" id="resumeForm" ;return false">
            <!--onsubmit="alert('Information saved')-->
            <div class="cardbg">
                <h2>Personal Information</h2>
                <div class="name">
                    <label for="firstName">First Name</label><input type="text" name="firstName" id="firstName"
                        required>
                    <p></p>
                    <label for="lastName">Last Name</label><input type="text" name="lastName" id="lastName" required>
                </div>

                <div class="name">
                    <label for="emailID">Email ID</label><input type="email" name="emailID" id="emailID" required>
                </div>

                <div class="name">
                    <label for="phoneNum">Phone Number</label><input type="text" name="phoneNum" id="phoneNum" required>
                </div>

                <div class="name">
                    <label for="objective">Your Objective</label>
                    <!-- <input type="text" name="objective" id="objective" required> -->
                    <p></p>
                    <textarea name="objective" id="objective" placeholder="Enter your objective here!" cols="54"
                        rows="10" required></textarea>
                </div>

                <h2>Your Educational Information</h2>

                <ol type="none" id="eduInfoList">
                    <li id="eduInfo1">
                        <div class="eduInfo">
                            <label for="university">University Name</label><input type="text" name="university"
                                id="university" required>
                            <input type="button" value="add" id="addSchool" class="addschool">
                            <p></p>
                            <label for="degree" id="edudeg">Degree</label><input type="text" name="degree" id="degree"
                                required>
                            <input type="button" value="remove" id="removeSchool" class="addschool">
                        </div>
                        <div class="eduInfo" id="degYearid">
                            <label for="degYear">When you recived your Degree</label><input type="date" name="degYear"
                                id="degYear" required>
                        </div>
                    </li>
                </ol>
                <br>

                <h2>Work Experience</h2>

                <ol type="1" id="workExpList">
                    <li id="workExpEle1">
                        <div class="workExp">
                            <label for="organization">Organization</label><input type="text" name="organization">
                            <input type="button" value="add" id="addWork" class="addWorkExp">
                            <p></p>
                            <label for="position" id="positionLable">Position</label><input type="text" name="position">
                            <input type="button" value="remove" id="removeWork" class="addWorkExp">
                            <p></p>
                            <label for="from">From</label><input type="date" name="from">
                            <p></p>
                            <label for="till">Till</label><input type="date" name="till">
                        </div>
                    </li>
                </ol>

                <div class="submitbtn">
                    <input type="submit" id="submitResume" value="SAVE INFORMATION" class="btn">
                </div>
            </div>
        </form>
    </div>

    <div class="alertInside" id="alert" hidden>
        <h1 id="alertText">This is hidden text</h1>
        <input type="button" value="done" onclick="hideAlert()" class="btn">
    </div>

    <input type="button" value="click" onclick="hideAlert1()" hidden>
</body>

<!-- importing scripts -->
<footer>
    <script src="/createResume/addSchool"></script>
</footer>

</html>